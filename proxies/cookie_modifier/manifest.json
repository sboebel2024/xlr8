{
    "name": "Overleaf Cookie Injector",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
      "cookies",
      "tabs",
      "storage",
      "webRequest",
      "webRequestBlocking",
      "http://*/*",
      "https://*/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "https://www.overleaf.com/*"
    ],
    "externally_connectable": {
      "matches": ["*://www.overleaf.com/*"]
    }
  }
  